{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "preserve",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
      "common-app": ["common-app"],
      "common": ["common"],
      "layouts": ["layouts"],
      "core": ["core"],
      "scenes": ["scenes"],
      "pods": ["pods"],
      "router": ["router"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
